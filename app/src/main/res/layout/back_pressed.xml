<?xml version="1.0" encoding="utf-8"?>
<LinearLayout style="@style/Theme.Transparent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <com.google.android.material.card.MaterialCardView
        android:layout_marginRight="40dp"
        android:layout_marginLeft="40dp"
        app:cardCornerRadius="24dp"
        android:id="@+id/notcard1"
        android:layout_width="match_parent"
        android:layout_height="200dp">
        <LinearLayout
            android:gravity="center"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <TextView
                android:textColor="@color/text_color_primary"
                android:textStyle="bold"
                android:textSize="20sp"
                android:gravity="center"
                android:text="Test App"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
            <TextView
                android:id="@+id/backPressText"
                android:textSize="16sp"
                android:textColor="@color/text_color_secondery"
                android:padding="15dp"
                android:gravity="center"
                android:text="You are on the quiz now. Are you sure you want to leave the quiz?"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
            <LinearLayout
                android:weightSum="2"
                android:layout_marginTop="15dp"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:gravity="center"
                    android:layout_weight="1"
                    android:textColor="@color/text_color_primary"
                    android:id="@+id/dialogYes"
                    android:padding="7dp"
                    android:textSize="16sp"
                    android:text="Yes"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:gravity="center"
                    android:layout_weight="1"
                    android:textColor="@color/text_color_primary"
                    android:id="@+id/dialogNo"
                    android:padding="7dp"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:text="Cancel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            </LinearLayout>
        </LinearLayout>
    </com.google.android.material.card.MaterialCardView>
</LinearLayout>