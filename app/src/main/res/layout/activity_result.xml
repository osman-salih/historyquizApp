<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ResultActivity">


    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/appbar"
        android:layout_width="match_parent"
        app:elevation="0dp"
        android:gravity="center"
        android:background="@color/background_color"
        android:layout_gravity="center"
        android:layout_height="?attr/actionBarSize"
        tools:ignore="MissingConstraints">
        <LinearLayout
            android:gravity="center"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="QUIZ RESULT"
                android:fontFamily="@font/kgprimary"
                android:textSize="25sp"
                android:textColor="@color/text_color"
                android:textAppearance="@style/TextAppearance.AppCompat.Widget.ActionBar.Title.Inverse"/>
        </LinearLayout>
    </com.google.android.material.appbar.AppBarLayout>

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/card4"
        app:strokeColor="@color/card_background"
        app:strokeWidth="1dp"
        app:cardElevation="4dp"
        app:cardCornerRadius="10dp"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        android:layout_marginLeft="25dp"
        android:layout_marginRight="25dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <RelativeLayout
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="200dp">
            <ImageView
                android:id="@+id/resultImage"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_centerHorizontal="true"
                android:src="@drawable/ic_smile_face" />
            <TextView
                android:layout_marginTop="15dp"
                android:id="@+id/yourScore"
                android:layout_below="@id/resultImage"
                android:textSize="20sp"
                android:fontFamily="@font/kgprimary"
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
            <TextView
                android:id="@+id/resultInfo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/yourScore"
                android:fontFamily="@font/kgprimary"
                android:gravity="center"
                android:padding="15dp"
                android:textColor="@color/text_color_secondery"
                android:textSize="22sp" />
        </RelativeLayout>
    </com.google.android.material.card.MaterialCardView>

    <LinearLayout
        android:weightSum="2"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <com.google.android.material.card.MaterialCardView
            android:layout_marginTop="15dp"
            android:layout_marginLeft="25dp"
            android:layout_marginRight="5dp"
            android:layout_marginBottom="10dp"
            app:strokeColor="@color/card_background"
            app:cardElevation="4dp"
            app:strokeWidth="1dp"
            app:cardCornerRadius="10dp"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="150dp">
            <LinearLayout
                android:orientation="vertical"
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <ImageView
                    android:src="@drawable/ic_correct"
                    android:layout_width="50sp"
                    android:layout_height="50sp"/>
                <TextView
                    android:layout_marginTop="15dp"
                    android:id="@+id/correctt"
                    android:textSize="20sp"
                    android:fontFamily="@font/kgprimary"
                    android:gravity="center"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>
        <com.google.android.material.card.MaterialCardView
            android:layout_marginTop="15dp"
            android:layout_marginRight="25dp"
            android:layout_marginLeft="5dp"
            android:layout_marginBottom="10dp"
            app:strokeColor="@color/card_background"
            app:cardElevation="4dp"
            app:strokeWidth="1dp"
            app:cardCornerRadius="10dp"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="150dp">
            <LinearLayout
                android:orientation="vertical"
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <ImageView
                    android:src="@drawable/ic_wrong"
                    android:layout_width="50sp"
                    android:layout_height="50sp"/>
                <TextView
                    android:layout_marginTop="15dp"
                    android:id="@+id/wrongt"
                    android:textSize="20sp"
                    android:fontFamily="@font/kgprimary"
                    android:gravity="center"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>
    </LinearLayout>

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/returnHome"
        app:strokeColor="@color/card_background"
        app:strokeWidth="1dp"
        app:cardElevation="4dp"
        app:cardCornerRadius="10dp"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        android:layout_marginLeft="25dp"
        android:layout_marginRight="25dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:padding="15dp"
                android:text="Return to Homepage"
                android:fontFamily="@font/kgprimary"
                android:textColor="@color/text_color_secondery"
                android:textSize="22sp" />
    </com.google.android.material.card.MaterialCardView>


</LinearLayout>